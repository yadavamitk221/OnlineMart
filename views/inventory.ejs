<h1>Select Category and Subcategory</h1>
<form id="addInventory" action="inventory/addInventory" method="post">
  <label for="">Select Your Category</label>
  <select id="category" onchange="updateSubcategories()" required>
    <option disabled selected>Category</option>
    <% for (const category in data) { %>
    <option value="<%= category %>"><%= category %></option>
    <%}%>
  </select><br /><br />

  <label for="">Select Your Subcategory</label>
  <select id="subcategory" required>
    <option disabled selected>Subategory</option>
  </select><br /><br />
