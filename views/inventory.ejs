<!-- @format -->
<script src="/javaScript/inventory.js"></script>
<link rel="stylesheet" href="/css/inventory.css" />
<h1>Add Your Items here</h1>
<br />
<br />
<form id="addInventory" action="inventory/addInventory" method="post" enctype="multipart/form-data">
  <label for="">Select Your Category: </label>
  <select id="category" onchange="updateSubcategories()" required>
    <option disabled selected>Category</option>
    <% for (const category in data) { %>
    <option value="<%= category %>"><%= category %></option>
    <%}%>
  </select><br /><br />

  <label for="">Select Your Subcategory: </label>
  <select id="subcategory" required>
    <option disabled selected>Subategory</option>
  </select><br /><br />

  <label for="productName">Product Name: </label>
  <input type="text" name="productName" id="productName" />
  <br />
  <br />

  <label for="mrp">MRP: </label>
  <input type="number" name="mrp" id="mrp" />
  <br />
  <br />

  <label for="sp">SP:</label>
  <input type="number" name="sp" id="sp" />
  <br />
  <br />

  <label for="qty">QTY:</label>
  <input type="number" name="qty" id="qty" />
  <br />

  <br />

  <label for="product">Add Your Store file : </label>
      <input type="file" name="file" id="product" required />
      <br /><br />
  <br />

  <input type="submit">
</form>